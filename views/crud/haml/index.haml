%table
	%thead
		%tr
			- foreach($fields as $field)
				%th= (method_exists($orm = ORM::Factory($name), 'formo') ? Arr::path($orm->formo(), $field.'.label', __($field)) : __($field))
			%th= __('Actions')
	
	%tbody
		- foreach($elements as $element)
			%tr
				- foreach($fields as $field)
					%td= html::chars($element->$field)
				%td
					%a{:href => "#{Route::url($route, array('controller'=> Request::current()->controller(), 'action'=>'update')).'?id='.$element->id}"}= __('Edit')
					%a{:href => "#{Route::url($route, array('controller'=> Request::current()->controller(), 'action'=>'delete')).'?id='.$element->id}"}= __('Delete')

%a{:href = "#{Route::url($route, array('controller'=> Request::current()->controller(), 'action'=>'create'))}"}= __("Create")
